<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="it.uniroma1.keeptime.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="it.uniroma1.keeptime.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="it.uniroma1.keeptime.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="it.uniroma1.keeptime.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_share"
        android:name="it.uniroma1.keeptime.ui.share.ShareFragment"
        android:label="@string/menu_share"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_send"
        android:name="it.uniroma1.keeptime.ui.send.SendFragment"
        android:label="@string/menu_send"
        tools:layout="@layout/fragment_send" />
    <fragment
        android:id="@+id/userPreferencesFragment"
        android:name="it.uniroma1.keeptime.ui.userpreferences.UserPreferencesFragment"
        android:label="@string/menu_user_preferences"
        tools:layout="@layout/user_preferences_fragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="it.uniroma1.keeptime.ui.preferences.SettingsFragment"
        android:label="@string/menu_preferences">
        <action
            android:id="@+id/action_to_userPreferencesFragment"
            app:destination="@id/userPreferencesFragment" />
    </fragment>
    <action android:id="@+id/action_open_settings" app:destination="@id/settingsFragment" />
</navigation>
